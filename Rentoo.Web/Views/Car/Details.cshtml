@using Rentoo.Web.ViewModels
@using Rentoo.Domain.Entities
@using RM = Rentoo.Domain.Shared.Localization.Global;
@model CarDetailsViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Car.Model - Rentoo</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
        --primary-color: #ea001e;
            --secondary-color: #ea002f;
        --dark-color: #212529;
        --light-color: #f8f9fa;
        --success-color: #28a745;
        --danger-color: #dc3545;
        --border-radius: 8px;
        --box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
        --warning-color: #ffc107;
        }

        * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        }

        body {
        font-family: 'Poppins', sans-serif;
        color: var(--dark-color);
        line-height: 1.6;
        background-color: #f5f7fa;
        }

        .container-main {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 20px;
        }

        .car-details-container {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
        }

        .car-header {
        padding: 1rem;
        border-bottom: 1px solid #eee;
        }

        .car-title h2 {
        font-size: 2rem;
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 0.5rem;
        }

        .car-meta {
        display: flex;
        gap: 1rem;
        color: #6c757d;
        margin-bottom: 1.5rem;
        }

        .car-meta span {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        }

        .car-image-gallery {
        position: relative;
        margin: 2rem 0;
        }

        .main-image {
        width: 100%;
        height: 400px;
        object-fit: contain; /* Changed from cover to contain */
        object-position: center;
        border-radius: var(--border-radius);
        margin-bottom: 1rem;
        /* background-color: #f5f5f5; */ 
        }

        .thumbnail-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
        gap: 10px;
        }

        .thumbnail {
        width: 100%;
        height: 80px;
        object-fit: cover;
        border-radius: 4px;
        cursor: pointer;
        transition: var(--transition);
        border: 2px solid transparent;
        }

        .thumbnail:hover, .thumbnail.active {
        border-color: var(--primary-color);
        }

        .car-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
        padding: 2rem;
        }



        .car-specifications, .car-description, .car-owner-info {
        margin-bottom: 2rem;
        }

        h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--dark-color);
        position: relative;
        padding-bottom: 0.5rem;
        }

        h3::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 50px;
        height: 3px;
                background: linear-gradient(to right,var(--primary-color),var(--secondary-color));
        }

        .specs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        }

        .spec-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem;
        background: #f8f9fa;
        border-radius: var(--border-radius);
        }

        .spec-icon {
        color: var(--primary-color);
        font-size: 1.2rem;
        }

        .spec-label {
        font-weight: 500;
        }

        .spec-value {
        color: #495057;
        }


        /* Simplified Reviews Section */
        .reviews-section {
        margin-top: 2rem;
        padding: 1.5rem 0;
        }

        .reviews-title {
        font-size: 1.3rem;
        color: var(--dark-color);
        margin-bottom: 1.2rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #eee;
        }

        .review-box {
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
        margin-bottom: 1rem;
        }

        .review-box:last-child {
        border-bottom: none;
        }

        .review-user {
        font-weight: 500;
        color: var(--dark-color);
        margin-bottom: 0.3rem;
        }

        .review-rating {
        color: var(--warning-color);
        margin: 0.3rem 0;
        }

        .review-date {
        font-size: 0.8rem;
        color: #888;
        margin-bottom: 0.5rem;
        }

        .review-content {
        color: #555;
        line-height: 1.5;
        }

        .fa-star {
        color: var(--warning-color);
        }

        .fa-star-empty {
        color: black;
        }

        .no-reviews {
        color: #777;
        font-style: italic;
        padding: 1rem 0;
        }


        .car-availability {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: var(--border-radius);
        /* margin-bottom: 2rem; */
        }



        .availability-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        margin-bottom: 1rem;
        }

        .available {
        background-color: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
        }

        .not-available {
        background-color: rgba(220, 53, 69, 0.1);
        color: var(--danger-color);
        }

        .driver-option {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0.5rem 0;
        }

        .driver-icon {
        color: var(--secondary-color);
        }

        .location-option {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0.5rem 0;
        }

        .location-icon {
        color: var(--danger-color);
        }



        label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        }



        .btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
        }
        /* Request Button Styles */
        .request-button-container {
        margin-top: 1.5rem;
        margin-bottom: 1rem;
        }

        /* .request-button-container:hover{ */
        /*  color: #212529; */
        /* } */

